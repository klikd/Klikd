{
  "name": "@klikd/figma-mcp",
  "version": "1.0.0",
  "description": "Figma MCP (Model Context Protocol) integration for Klikd design system",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "start": "node dist/server.js",
    "dev:server": "tsx src/server.ts",
    "generate:types": "tsx src/scripts/generate-types.ts",
    "sync:design-tokens": "tsx src/scripts/sync-design-tokens.ts",
    "validate:figma": "tsx src/scripts/validate-figma.ts",
    "auto:sync": "tsx src/scripts/auto-sync.ts",
    "auto:sync:watch": "tsx src/scripts/auto-sync.ts --watch",
    "auto:sync:ci": "tsx src/scripts/auto-sync.ts --generate-types --generate-css --generate-scss --generate-storybook"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "figma-api": "^1.11.0",
    "axios": "^1.6.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "figma-js": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/figma": "^1.0.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.0",
    "vitest": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "keywords": [
    "figma",
    "mcp",
    "design-system",
    "design-tokens",
    "figma-api",
    "klikd"
  ],
  "author": "Klikd Team",
  "license": "MIT"
}
