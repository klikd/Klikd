{
  "name": "@klikd/design-system",
  "version": "1.0.0",
  "description": "Klikd Design System - Tokens, themes, and UI primitives",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "style-dictionary build && tsc",
