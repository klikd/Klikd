# Klikd Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/klikd"
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"
MAWTHOQ_API_KEY="your-mawthoq-api-key"
MAWTHOQ_API_URL="https://api.mawthoq.sa"

# AI Services
OPENAI_API_KEY="your-openai-api-key"
INWORLD_API_KEY="your-inworld-api-key"
INWORLD_WORKSPACE_ID="your-inworld-workspace"

# AR Services
ECHO3D_API_KEY="your-echo3d-api-key"
LIGHTSHIP_API_KEY="your-lightship-api-key"
UNITY_CLOUD_PROJECT_ID="your-unity-project-id"

# Payment Gateways
STC_PAY_API_KEY="your-stc-pay-key"
STC_PAY_MERCHANT_ID="your-merchant-id"
STRIPE_SECRET_KEY="your-stripe-secret"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable"

# Analytics
MIXPANEL_TOKEN="your-mixpanel-token"
AMPLITUDE_API_KEY="your-amplitude-key"
FIREBASE_PROJECT_ID="your-firebase-project"

# Maps & Location
MAPBOX_ACCESS_TOKEN="your-mapbox-token"
GOOGLE_MAPS_API_KEY="your-google-maps-key"

# Content Moderation
PERSPECTIVE_API_KEY="your-perspective-api-key"

# Cloud Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="klikd-assets"
AWS_REGION="me-south-1"

# Notifications
FCM_SERVER_KEY="your-fcm-server-key"
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"

# Development
NODE_ENV="development"
PORT=3000
LOG_LEVEL="debug"

# Feature Flags
ENABLE_AR_ULTRA="false"
ENABLE_NCP_BETA="true"
ENABLE_MAWTHOQ_VERIFICATION="true"
